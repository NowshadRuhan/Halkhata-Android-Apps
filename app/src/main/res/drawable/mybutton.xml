<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dp" />
            <stroke android:width="30dp" android:color="#a77af4" />
            <gradient android:angle="90" android:startColor="#9688f2" android:endColor="#8897ec"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="30sp" />
            <stroke android:width="30sp" android:color="#8291ef" />
            <solid android:color="#898bec"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="38dp" />
            <stroke android:width="1dip" android:color="#8388e4" />
            <gradient android:angle="90" android:startColor="#7078e4" android:endColor="#7894ed" />
        </shape>
    </item>
</selector>